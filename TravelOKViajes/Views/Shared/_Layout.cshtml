<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - TravelOK</title>
    <script src="~/Scripts/Project/jQuery/jquery-3.4.1.js"></script>
    <link href="~/Content/Project/Bootstrap/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/Project/Bootstrap/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/Project/Bootstrap/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/Project/cssGeneral.css" rel="stylesheet" />
    <script src="~/Scripts/Project/Bootstrap/bootstrap.bundle.js"></script>
    <script src="~/Scripts/Project/Bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/Project/list.min.js"></script>
    <script src="~/Scripts/Project/sweetalert2.all.min.js"></script>
    <script src="~/Scripts/Project/jsMensajes.js"></script>
    <script src="~/Scripts/Project/jsGeneral.js"></script>
</head>
<body>
    <div id="dvCarga">
        <div class="loader"></div>
    </div>    
    <nav class="navbar navbar-expand-lg navbar-dark bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav ml-auto">
                <!--@Html.ActionLink("Confirma", "ConfirmaVenta", "Venta", null, null)-->
                @Html.ActionLink("DESTINOS", "Destinos", "Home", new { @class = "nav-item nav-link" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("VIAJEROS", "Comunidad", "Home", new { @class = "nav-item nav-link" }, new { @class = "nav-item nav-link" })
                @if (Session["UserName"] != null)
                {
                    <div id="dvPersona">Bienvenido @Session["UserName"].ToString()</div>
                }
                else
                {
                    @Html.ActionLink("Iniciar sesión", "TravelInicio", "Logueo", new { @class = "nav-item nav-link" }, new { @class = "nav-item nav-link" })
                    @Html.ActionLink("Registrarse", "TravelRegistro", "Logueo", new { @class = "nav-item nav-link" }, new { @class = "nav-item nav-link" })
                }
                @Html.ActionLink("¡Evalúa tu viaje!", "Index", "Encuesta", new { @class = "nav-item nav-link" }, new { @class = "nav-item nav-link" })
            </div>
        </div>
    </nav>

    <div id="dvBarra">
        <ul class="ulnav">
            <li id="liInd" class="nav-item active">
                <a class="nav-link linini" href='@Url.Action("Index", "Home")'>
                </a>
            </li>
            <li id="liIcons">
                <ul id="ulIcons">
                    <li>
                        <a id="awp" href="https://www.facebook.com/Traveelok/?ref=bookmarks"></a>
                    </li>
                    <li>
                        <a id="afb" href="https://www.facebook.com/Traveelok/?ref=bookmarks"></a>
                    </li>
                    <li>
                        <a id="aig" href="https://www.instagram.com/viajestravelok/"></a>
                    </li>
                </ul>
            </li>
        </ul>

    </div>
    <div id="carouselExampleControls" class="carousel car1 slide d-flex justify-content-center" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="carh d-block w-100" src="~/Img/CarruselPrincipal/1.jpg" id="Fsl" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="carh d-block w-100" src="~/Img/CarruselPrincipal/2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="carh d-block w-100" src="~/Img/CarruselPrincipal/3.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="carh d-block w-100" src="~/Img/CarruselPrincipal/4.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="carh d-block w-100" src="~/Img/CarruselPrincipal/5.jpg" alt="Third slide">
            </div>
        </div>
    </div>
    <div class="container body-content col-12">
        @RenderBody()
        <p id="pclear"></p>
        <hr />

    </div>

    <!--Carrusel Dinamico-->
    <div class="modal fade col-12" id="modal" role="dialog" aria-hidden="true">
        <div class="modal-dialog modalDialog" role="document">
            <div class="modal-content modalContent">
                <div class="modal-header modal-header-success">
                    <h5 class="modal-title" id="exampleModalLabel">Vive una experiencia Travel</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">x</button>
                </div>
                <div class="modal-body">
                    <div class="container col-12">
                        <div class="car col-6">
                            <div id="carouselExampleIndicators" class="carousel slide h-100" data-ride="carousel">
                                <ol class="carousel-indicators"></ol>
                                <div class="carousel-inner">
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div class="dvText col-6 h-100">
                            <div class="m-auto">
                                <h1 class="mb-1 mt-5 hTitmodal"></h1>
                                <h2 class="mb-2 hSubTmodal"></h2>
                                <div id="dvInfo" class="mb-2">
                                </div>
                                <div class="col-12 d-flex justify-content-around mb-2">
                                    <div class="btn text-white">Itinerario</div>
                                    <div class="btn text-white">Guia de Viaje</div>
                                    <div class="btn text-white">Recomendaciones</div>
                                    <div class="btn text-white">RESERVA AHORA</div>
                                </div>
                                <div id="dvBarBaja" class="d-flex justify-content-around col-12">
                                    <div class="col-6">
                                        <div id="dvAnu1">
                                            ¿QUIÉRES REALIZAR EL VIAJE DE TUS SUEÑOS?
                                        </div>
                                        <div id="dvAnu2">
                                            Envíanos un mensaje y un asesor resolverá !TODAS TUS DUDAS¡
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div id="wbtn">
                                            Mándanos un whatsapp
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--Fin Carrusel Dinamico-->

    <footer class="col-12;">
        <ul id="ulFooter" class="col-12">
            <li id="liQui" class="nav-item">
                <img class="iconitem" src="~/Img/iconos/pe.png" />@Html.ActionLink("¿Quiénes somos?", "QuienesSomos", "Home")
            </li>
            <li id="liCon" class="nav-item">
                @Html.ActionLink("Contacto", "Contact", "Home")
                <img class="iconitem" src="~/Img/iconos/tel.png" />
                <img class="iconitem" src="~/Img/iconos/ma.png" />
                <img class="iconitem" src="~/Img/iconos/ub.png" />
            </li>
            <li id="liBlo" class="nav-item">
                @Html.ActionLink("Blog", "Blog", "Home")
            </li>
            <li id="liAviso" class="nav-item">
                @Html.ActionLink("Aviso de privacidad", "Blog", "Home")
            </li>
            <li id="liTer" class="nav-item">
                @Html.ActionLink("Términos y condiciones", "Terminos", "Home")
            </li>
        </ul>
    </footer>
    <script src="~/Scripts/Project/jsLayout.js"></script>
</body>
</html>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row col-10 m-auto">
        <h2>Encuesta de Calidad y satisfacción en el servicio “Travel Ok”</h2>
        <div class="row col-12">
            <input class="form-control col-4 mr-4" placeholder="Nombre(s)" id="inNom" maxlength="50" />
            <label class="mr-2">Fecha de viaje: </label>
            <input class="form-control col-4" type="date" placeholder="Fecha de tu viaje" id="inFechaViaje" />
        </div>
        <label id="lbTour" class="mt-3">Fecha Actual: </label><label class="ml-2 mt-3" id="lbFecha"></label>
        <div class="Text mt-2 ml-5">
            <div>
                <form class="form-group">
                    <select class="form-control" id="selDestinos">
                        <option value="0">Selecciona el destino que te gustaría evaluar</option>
                    </select>
                </form>
            </div>
        </div>
        <div class="col-12" id="dvPreguntas">

        </div>

        <div class="container mt-5">
            <div class="btn btn-primary btn-block" id="btnSend">
                Enviar Encuesta
            </div>
        </div>

        <div class="col-12 foot">
            “EL EQUIPO DE TRAVEL OK AGRADECE TU PREFERENCIA”
        </div>
    </div>
</div>

<link href="~/Content/Project/cssEncuesta.css" rel="stylesheet" />
<script src="~/Scripts/Project/jsEncuesta.js"></script>
<input type="hidden" id="urlDestinoInicial" value="@Url.Action("InicialEncuesta","Encuesta")" />
<input type="hidden" id="urlEnviarEncuesta" value="@Url.Action("RecibeEncuesta","Encuesta")" />


@{
    ViewBag.Title = "TravelRegistro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">Se parte de nosotros, estás a solo un paso de formar parte de esta experiencia</h2>
<div class="container">
    <div class="row">
        <div class="col-sm  mb-4">
            <input class="form-control" placeholder="Nombre(s)" id="inNom" maxlength="150" />
        </div>
        <div class="col-sm  mb-4">
            <input class="form-control" placeholder="Apellido(s)" id="inApp" maxlength="150" />
        </div>
        <div class="col-sm  mb-4">
            <select id="inGen" class="form-control">
                <option>Seleccionar género</option>
                <option>Masculino</option>
                <option>Femenino</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm mb-4">
            <input class="form-control" type="date" placeholder="Fecha de nacimiento" id="inCumple" />
        </div>
        <div class="col-sm mb-4">
            <input class="form-control" placeholder="País" id="inPais" maxlength="150" />
        </div>
        <div class="col-sm mb-4">
            <input class="form-control" placeholder="Estado" id="inEstado" maxlength="150"/>
        </div>
    </div>
    <div class="row">
        <div class="col-sm mb-4">
            <input type="number" class="form-control" placeholder="Teléfono" maxlength="12" id="inTel" />
        </div>
        <div class="col-sm mb-4">
            <input type="text" class="form-control" placeholder="Confirmar Teléfono" maxlength="12"  id="inTel2" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm mb-4">
            <input type="number" class="form-control" placeholder="Número de emergencia" maxlength="12" id="inTelEmerg" />
        </div>
        <div class="col-sm mb-4">
            <input type="text" class="form-control" placeholder="Parentesco del número de emergencia" id="inParentesco" maxlength="150" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm mb-4">
            <input class="form-control" type="email" placeholder="Correo" id="inCorreo" maxlength="150" />
        </div>
        <div class="col-sm mb-4">
            <input class="form-control" type="email" placeholder="Confirmar Correo" id="inCorreo2" maxlength="150" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm mb-4">
            <input class="form-control" type="password" placeholder="Contraseña" id="inContra" maxlength="30"/>
        </div>
        <div class="col-sm mb-4">
            <input class="form-control" type="password" placeholder="Confirmar Contraseña" id="inContra2" maxlength="30" />
        </div>
    </div>
    <div class="row mb-4 d-flex justify-content-end">
        <div class="btn btn-primary col-sm-4" id="btnRegistro">
            REGISTRARME
        </div>
    </div>
    <div class="row mb-4 d-flex justify-content-end">
        <div class="btn">
            Al confirmar, aceptas nuestros Términos y condiciones.
        </div>
    </div>
</div>
<script src="~/Scripts/Project/jsLogueo.js"></script>
<input type="hidden" id="urlRegistro" value="@Url.Action("RegistrarUsuario","Logueo")" />